<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kenshi.informacion.Informacion">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="top"
                android:text="Actividad VolcÃ¡nica "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="0.21" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/btn1"
                    android:background="@drawable/bv"
                    app:srcCompat="@mipmap/aa" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/btn2"
                    android:background="@drawable/mbot2"
                    app:srcCompat="@mipmap/ax" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/btn3"
                    android:background="@drawable/bn"
                    app:srcCompat="@mipmap/ar" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/btn4"
                    android:background="@drawable/br"
                    app:srcCompat="@mipmap/an" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titulo"
                    android:text="TextView1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="TextView"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titulo"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="53dp"
                    android:id="@+id/descrip"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:layout_weight="0.82" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
