<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.divisionpoliticaproyecto.CotopaxiDP"
    android:background="@drawable/cotopaxidp">

    <TextView
        style="@style/tituloCotopaxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Mapa PolÃ­tico de Cotopaxi"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/saquisiliID"
        android:background="@drawable/btn_saquisili"
        android:onClick="Saquisili"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/pujiliID"
        android:layout_toEndOf="@+id/pujiliID" />

    <Button
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/latacungaID"
        android:background="@drawable/btn_latacunga"
        android:onClick="Latacunga"
        android:layout_alignTop="@+id/saquisiliID"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/sigchosID"
        android:background="@drawable/btn_sigchos"
        android:onClick="Sigchos"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/saquisiliID" />

    <Button
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/lamanaID"
        android:background="@drawable/btn_lamana"
        android:onClick="LaMana"
        android:layout_alignTop="@+id/saquisiliID"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/pujiliID"
        android:background="@drawable/btn_pujili"
        android:onClick="Pujili"
        android:layout_above="@+id/salcedoID"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/panguaID"
        android:background="@drawable/btn_pangua"
        android:layout_marginBottom="89dp"
        android:onClick="Pangua"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lamanaID" />

    <Button
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/salcedoID"
        android:background="@drawable/btn_salcedo"
        android:onClick="Salcedo"
        android:layout_alignTop="@+id/panguaID"
        android:layout_toEndOf="@+id/saquisiliID" />

    <TextView
        style="@style/texto"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presione sobre una de las Banderas."
        android:id="@+id/textView8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
