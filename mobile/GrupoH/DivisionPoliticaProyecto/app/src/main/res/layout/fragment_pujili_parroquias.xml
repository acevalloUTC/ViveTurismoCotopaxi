<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.PujiliParroquias"
    android:background="@drawable/fondo1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/imageView4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/franja1" />

    <ScrollView
        style="@style/layoutSimbolos"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/flecha" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deslice para ver más imágenes."
                    android:id="@+id/textView7" />
            </LinearLayout>

            <HorizontalScrollView
                android:background="@drawable/borde_imagenes"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:id="@+id/horizontalScrollView"
                android:layout_gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/imagenesSlider"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:id="@+id/pujili1"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pujili6"
                        />
                    <ImageView
                        style="@style/imagenesSlider"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:id="@+id/pujili2"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pujili7"
                        />
                    <ImageView
                        style="@style/imagenesSlider"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:id="@+id/pujili3"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pujili8"
                        />
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    style="@style/texto"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Parroquias Urbanas"
                    android:id="@+id/textView" />

                <TextView
                    style="@style/texto"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Parroquias Rurales"
                    android:id="@+id/textView2" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:entries="@array/UrbanoPujili"
                    style="@style/listasP"
                    android:layout_width="180dp"
                    android:layout_height="300dp"
                    android:id="@+id/listView" />

                <ListView
                    android:entries="@array/RuralPujili"
                    style="@style/listasP"
                    android:layout_width="180dp"
                    android:layout_height="300dp"
                    android:id="@+id/listView2" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

        <ImageView
            style="@style/franjaBaja"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:id="@+id/imageView17"
            android:src="@drawable/franja1" />

    </LinearLayout>

</RelativeLayout>
