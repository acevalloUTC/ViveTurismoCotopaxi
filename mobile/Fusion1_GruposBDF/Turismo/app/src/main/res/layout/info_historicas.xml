<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Vive Turismo Cotopaxi"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="20dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorFondo"/>


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/a3"
            android:id="@+id/imageViewHisto" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorFondo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22sp"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/textViewtituloHisto" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación: "
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:id="@+id/textViewUbicacionHisto" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción: "
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:id="@+id/textViewInformacionHisto" />

    </LinearLayout>
</ScrollView>
</LinearLayout>