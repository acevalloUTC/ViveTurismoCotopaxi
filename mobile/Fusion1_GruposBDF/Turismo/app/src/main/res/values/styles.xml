<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorText</item>
        <item name="colorPrimaryDark">@color/accentColor</item>
        <item name="colorAccent">@color/colorYellow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="FullHeightDialog" parent="Theme.AppCompat.Light.Dialog"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorText</item>
        <item name="colorPrimary">@color/accentColor</item>
        <item name="colorAccent">@color/colorBgrey</item>

        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>



</resources>
