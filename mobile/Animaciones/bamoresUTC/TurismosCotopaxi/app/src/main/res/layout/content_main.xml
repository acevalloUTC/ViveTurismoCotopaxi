<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="62dp"
                android:layout_height="wrap_content"

                android:id="@+id/textView2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/viveturismo"
                android:id="@+id/imageView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:id="@+id/textView3"
                android:layout_weight="0.69" />

            <ImageView
                android:layout_width="52dp"
                android:layout_height="69dp"
                android:background="@drawable/gadcotopaxi"
                android:id="@+id/imageView4"
                android:layout_weight="0.27" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="0.21">

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/franja1"
            android:id="@+id/imageView5" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_height="96dp"
            android:layout_width="match_parent"
            android:layout_weight="0.50">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="0.46">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"

                    android:id="@+id/button"
                    android:background="@drawable/latacunga" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/button2"
                    android:background="@drawable/salcedo1" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/button3"
                    android:background="@drawable/saquisili" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/button4"
                    android:background="@drawable/pujili" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Latacunga"
                    android:id="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="   Salcedo"
                    android:textColor="#000000"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="    Saquisilí"
                    android:textColor="#000000"
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="       Pujilí"
                    android:textColor="#000000"
                    android:id="@+id/textView6" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView10" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/button5"
                    android:background="@drawable/sigchos" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/button6"
                    android:background="@drawable/pangua" />

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/button7"
                    android:background="@drawable/mana" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sigchos"
                    android:textColor="#000000"
                    android:id="@+id/textView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="      Pangua"
                    android:textColor="#000000"
                    android:id="@+id/textView8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="      La Maná"
                    android:textColor="#000000"
                    android:id="@+id/textView9" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:background="@drawable/franja1"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
